{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "moduleResolution": "nodenext", // or "nodenext"
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
